#include <iostream>
using namespace std;
class circle{
    int radius;
public:
void accept(){
    cout<<"Enter radius of circle:";
    cin>>radius;
    
}
void display(){
    float area = 3.14*radius *radius;
    cout<<"Area if circle is:"<<area;
}
};
int main(){
    circle c1;
    circle *pc;
    pc = &c1;
    
    pc->accept();
    pc->display();
    
    return 0;
}
