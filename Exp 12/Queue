#include <iostream>
#include <queue>
using namespace std;

int main() {
    queue<int> q;
    int ch, x;

    do {
        cout << "\n1. Enqueue (Push)\n2. Dequeue (Pop)\n3. Front\n4. Size\n5. Exit\n";
        cout << "Enter choice: ";
        cin >> ch;

        switch(ch) {

            case 1:
                cout << "Enter value: ";
                cin >> x;
                q.push(x);
                break;

            case 2:
                if(!q.empty()) {
                    q.pop();
                    cout << "Dequeued.\n";
                } else {
                    cout << "Queue empty.\n";
                }
                break;

            case 3:
                if(!q.empty()) {
                    cout << "Front = " << q.front() << endl;
                } else {
                    cout << "Queue empty.\n";
                }
                break;

            case 4:
                cout << "Size = " << q.size() << endl;
                break;

            case 5:
                cout << "Exit.\n";
                break;

            default:
                cout << "Invalid.\n";
        }

    } while(ch != 5);

    return 0;
}
