#include <iostream>
using namespace std;

class sum{
    int n;
    int s=0;
    
    public:
    sum(){
        n=4;
    }
sum (sum &obj){
    n=obj.n;
    
    int i;
    for(i=1;i<=n;i++){
        s= s+i;
    }
    cout<<"sum="<<s;
}
};

int main(){
    sum s1;
    sum s2(s1);
    
return 0;
}
       
