
#include <iostream>
using namespace std;
class weight{
    float kg;
    float gm;
    public:
    void accept(){
        cout<<"Enter weight in kg and gm:";
        cin>>kg>>gm;
    }
    
void calcWeight(weight w1,weight w2){
    int totalGrams1 = w1.kg * 1000 + w1.gm;
    int totalGrams2 = w2.kg * 1000 + w2.gm;
        
    int totalGrams = totalGrams1 + totalGrams2;
    float totalKg = totalGrams / 1000.0;
    
    cout<<"Weight in kg is:"<<totalKg<<"kg";
}
};
int main(){
    weight w1,w2,result;
    
    cout << "Enter first weight:\n";
    w1.accept();
    
    cout << "Enter second weight:\n";
    w2.accept();
    
    result.calcWeight(w1,w2);
    
    
    return 0;
    
    
    
}
