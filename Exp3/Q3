#include <iostream>
using namespace std;

class Student{
    public:
    class Marks{
        public:
        int m1,m2,m3;
        
        void accept(){
            cout<<"Enter marks for three subjects :";
            cin>>m1>>m2>>m3;
        }
        float getpercentage(){
            float percentage = (m1+m2+m3)/3.0;
            return percentage;
        }
    };
};
int main(){
    Student :: Marks Marks;
    Marks.accept();
    
    float percentage = Marks.getpercentage();
    cout<<"Percentage="<<percentage<<"%";
    
return 0;
}
